<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_tag_txt"
        android:background="?attr/selectableItemBackground"
        android:drawableEnd="@drawable/ic_add_pink"
        android:drawableRight="@drawable/ic_add_pink"
        android:drawablePadding="5dp"
        android:text="@string/tag_add"
        android:textSize="16sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/hLine"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        />
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_view_tag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".TagFrag"/>
</LinearLayout>